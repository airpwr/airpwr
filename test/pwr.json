{
	"packages": ["file:///./pkg1"],
	"scripts": {
		"print": "if (1 -ne 1) { exit 1 } exit 2",
		"set": {
			"format": "if (('{1}' -ne '1') -or ('{2}' -ne '2') -or ('{3}' -ne '3')) {{ exit 1 }} exit 2"
		},
		"setA": {
			"format": "if ('{1}' -ne 'A') {{ exit 1 }} exit 2",
			"args": ["A"]
		},
		"testPwr": {
			"packages": ["pwr"],
			"command": "pwr version | Out-Null"
		}
	},
	"version": "0.3.+"
}